@page
@model CustomerSite.Pages.RegisterModel
@{
    <div class="row">
        <div class="register-bg col-6">
            <div class="register-title">
                Đăng ký
            </div>
        </div>
        <div class="register-form col-6">
            <form method="post" asp-page="Register" class="row g-3">
                <div>
                    <label for="username" class="visually-hidden">Username</label>
                    <input name="username" type="text"  class="form-control-plaintext" id="username" placeholder="Username">
                </div>
                <div>
                    <label for="password" class="visually-hidden">Password</label>
                    <input name="password" type="password"  class="form-control-plaintext" id="password" placeholder="Password">
                </div>
                <div>
                    <label for="fullname" class="visually-hidden">Full Name</label>
                    <input name="name" type="text"  class="form-control-plaintext" id="name" placeholder="Fullname">
                </div>
                <div>
                    <button type="submit" class="btn mb-3">Đăng ký</button>
                </div>
            </form>
        </div>
    </div>
}

<style>
    .register-bg {
        background-color: #f57f48;
        height: 600px; 
        position: relative;
    }
    .register-title {
        color: white;
        font-size: 60px;
        position: absolute;
        right: 50%;
        top: 50%;
        transform: translate(50%, -50%);
    }
    .register-form .row {
        width: 70%;
        margin: 0 auto;
    }
    .register-form button {
        background-color: #f57f48;
        color: white;
        padding: 15px 40px;
    }

    .register-form button:hover {
        background-color: #f57f48;
        color: white;
    }

    .register-form .form-control-plaintext {
        padding: 15px;
        background-color: #f8f8f8;
    }

</style>

