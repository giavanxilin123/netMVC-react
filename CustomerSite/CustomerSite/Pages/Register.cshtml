@page
@model CustomerSite.Pages.RegisterModel
@{
    <div class="row">
        <div class="register-bg col-6">
            <div class="register-title">
                Đăng ký
            </div>
        </div>
        <div class="register-form col-6">
            <form class="row g-3">
                <div>
                    <label for="username" class="visually-hidden">Username</label>
                    <input type="text" class="form-control-plaintext" id="username" placeholder="Username">
                </div>
                <div>
                    <label for="password" class="visually-hidden">Password</label>
                    <input type="password" class="form-control-plaintext" id="password" placeholder="Password">
                </div>
                <div>
                    <button type="submit" class="btn btn-primary mb-3">Confirm identity</button>
                </div>
            </form>
        </div>
    </div>
}

<style>
    .register-bg {
        background-color: #f57f48;
        height: 600px; 
        position: relative;
    }
    .register-title {
        color: white;
        font-size: 60px;
        position: absolute;
        right: 50%;
        top: 50%;
        transform: translate(50%, -50%);
    }
</style>

