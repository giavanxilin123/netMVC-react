@using CustomerSite.Pages
@model List<Product>

@foreach (var i in Model)
{
    <div class="col-2">
        <a asp-page="detail" asp-route-id=@i.Id class="best-product-detail">
            <div class="best-product-img">
                <div class="product-score">@Math.Round((double)i.Score, 1)</div>
                <img src= "@i.ImagePath" alt="">
            </div>
            <div class="name">@i.Name</div>
            <hr style ="color: red; width: 20%; margin: 0 auto">
            <div style="margin: 10px 0;" class="price signature-color">@i.Price</div>
        </a>
    </div>                   
}  

<style>
    .best-product-detail {
        position: relative;
        display: block;
        text-decoration: none;
        color: black;
    }
    .best-product-detail:hover {
        text-decoration: none;
        color: black;
    }
    .product-score {
        position: absolute;
        right: 0;
        padding: 5px;
        width: 50px;
        color: white;
        background-color: #f57f48;
    }
</style>