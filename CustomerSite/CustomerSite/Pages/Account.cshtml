@page
@model CustomerSite.Pages.AccountModel

@{
    @* string user = Context.Request.Cookies["user"]; *@
}
@{
    <div class="row">
        <div class="account-bg col-6">
            <div class="account-title">
                Tài khoản của @Model.user.Name
            </div>
        </div>
        <div class="account-form col-6">
            <h4 style="border-bottom: 1px solid #ededed; padding-bottom: 10px;">THÔNG TIN TÀI KHOẢN</h4>
            <div class="account__name">
                @Model.user.Name
            </div>
            <div class="account__username">
                @Model.user.Username
            </div>
            <div class="account__email">
                @(Model.user.Username + "@gmail.com")
            </div>
            <div class="account__address">
                Vietnam
            </div>
        </div>
    </div>
}

<style>
    .account-bg {
        background-color: #f57f48;
        height: 600px; 
        position: relative;
    }
    .account-title {
        color: white;
        font-size: 50px;
        position: absolute;
        right: 50%;
        top: 50%;
        transform: translate(50%, -50%);
    }
    .account-form .row {
        width: 70%;
        margin: 0 auto;
    }
    .account-form button {
        background-color: #f57f48;
        color: white;
        padding: 15px 40px;
    }

    .account-form button:hover {
        background-color: #f57f48;
        color: white;
    }

    .account-form .form-control-plaintext {
        padding: 15px;
        background-color: #f8f8f8;
    }
    .account-form {
        padding: 50px;
    }

    .account__name {
        font-weight: 700;
    }

</style>


